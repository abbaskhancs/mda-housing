# MDA Housing - Environment Variables Example
# Copy this file to .env and update the values for your environment

# =============================================================================
# API Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://mda_user:mda_password@localhost:5432/mda_housing_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mda_housing_db
DB_USER=mda_user
DB_PASSWORD=mda_password

# =============================================================================
# MinIO/S3 Object Storage Configuration
# =============================================================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=mda-housing-documents
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# Alternative S3 Configuration (for production)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=mda-housing-documents

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# PDF Generation Configuration
# =============================================================================
PDF_GENERATION_ENABLED=true
PDF_TEMPLATE_PATH=./templates
PDF_OUTPUT_PATH=./temp/pdf-output
PDF_FONT_PATH=./assets/fonts/NotoNastaliqUrdu-Regular.ttf
PDF_QR_CODE_SIZE=100
PDF_PAGE_MARGIN=20

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,image/tiff
UPLOAD_TEMP_PATH=./temp/uploads

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=your-csrf-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@mda-housing.gov.pk

# =============================================================================
# Development/Demo Configuration
# =============================================================================
DEMO_MODE=true
SEED_DEMO_DATA=true
ENABLE_DEBUG_ROUTES=true

# =============================================================================
# Production Configuration (uncomment for production)
# =============================================================================
# NODE_ENV=production
# HTTPS_ENABLED=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_db
# MINIO_ENDPOINT=your-minio-endpoint.com
# MINIO_USE_SSL=true
# DEMO_MODE=false
# SEED_DEMO_DATA=false
# ENABLE_DEBUG_ROUTES=false
